#!/bin/bash
# See /etc/bash.bashrc
LOG=/tmp/setup.$$.log
touch $LOG
chmod 666 $LOG

# based on control group v1 or v2
#grep docker /proc/1/cgroup >> $LOG
#if [ $? != 0 ]; then
if [ ! -f /.dockerenv ]; then
    echo "NOT IN CONTAINER"
    exit -1
fi

[ -z "$PS1" ] && return

shopt -s checkwinsize

# simple bash prompt
export PS1='\u:\!> '
export TERM=linux
echo -e "\e[m"

alias h="history"
